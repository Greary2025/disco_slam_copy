<launch>
  <!-- 机器人ID，用于构造话题 /<robot_id>/disco_slam/mapping/path -->
  <arg name="robot_id" default="gensui" />
  <!-- 输出目录与文件名 -->
  <arg name="output_dir" default="/mnt/d/rosbag/Examdata/double_evo/disco" />
  <arg name="output_file" default="gensui_trajectory.txt" />
  <arg name="overwrite" default="true" />
  <arg name="flush_every" default="50" />

  <node pkg="disco_slam" type="disco_slam_path_to_tum" name="path_to_tum_logger" output="screen">
    <param name="path_topic" value="/$(arg robot_id)/disco_slam/mapping/path" />
    <param name="output_dir" value="$(arg output_dir)" />
    <param name="output_filename" value="$(arg output_file)" />
    <param name="overwrite" value="$(arg overwrite)" />
    <param name="flush_every" value="$(arg flush_every)" />
  </node>
</launch>
